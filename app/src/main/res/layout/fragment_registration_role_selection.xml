<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.authentication.registration.registrationsteps.RegistrationRoleSelectionFragment">

    <RadioGroup
        android:id="@+id/roleSelectionGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/landlordRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am a landlord"
            android:textSize="18sp"
            android:layout_marginStart="16dp"/>

        <RadioButton
            android:id="@+id/userRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am a user"
            android:textSize="18sp"
            android:layout_marginStart="16dp"/>
    </RadioGroup>

    <!-- Add more fields as needed -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="16dp"
        android:enabled="false"/> <!-- Initially disabled -->
</LinearLayout>
